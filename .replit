modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "NextJsServer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DrizzleDBPush"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DrizzleDBGenerate"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VercelBuild"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PushDB"

[[workflows.workflow]]
name = "NextJsServer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "DrizzleDBPush"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx drizzle-kit push"

[[workflows.workflow]]
name = "DrizzleDBGenerate"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx drizzle-kit generate"

[[workflows.workflow]]
name = "VercelBuild"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "next build"

[[workflows.workflow]]
name = "PushDB"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsx scripts/push-db.ts"

[deployment]
run = ["sh", "-c", "npm install && npm run dev"]

[[ports]]
localPort = 5000
externalPort = 80
